<title> profile |
    <%=user.name%>
</title>

<main class="main-father">
    <div class="container text-center  bg-light py-3 border rounded-sm">
        <div class="col-md-4 text-center">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="/images/6c9239cd7bc0aa94decd1b5fa2a38f81_3.jpg" alt="Card image cap">
                <div class="card-body">
                    <h1>
                        <%=user.name%>
                    </h1>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">Comments <span class="badge badge-dark"><%=comment.length%></span></button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </div>
                        <small class="text-muted"><%=user.createdAt.toLocaleDateString() %></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>