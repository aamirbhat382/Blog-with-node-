<main class="main-father">
    <div class="container bg-light py-2">
        <form action="/admin/update/<%=article.id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="exampleFormControlInput1">Title Of Post</label>
                <input type="text" value="<%=article.title%>" name="title" class="form-control" id="exampleFormControlInput1" placeholder="Title Of the Article ">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Name Of Author</label>
                <input type="text" name="authon" class="form-control" id="exampleFormControlInput1" placeholder="Name Of Author ">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Related</label>
                <select class="form-control" id="exampleFormControlSelect1">
         <option>Programming</option>
         <option>Math</option>
         <option>Javascript</option>
         <option>Python</option>
         <option>Other</option>
       </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Description</label>
                <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"><%=article.description%></textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Markdown</label>
                <textarea class="form-control" name="markdown" id="exampleFormControlTextarea1" rows="10"><%=article.markdown%></textarea>
            </div>
            <button type="submit" class="btn btn-secondary">Submit</button>
        </form>
    </div>
</main>